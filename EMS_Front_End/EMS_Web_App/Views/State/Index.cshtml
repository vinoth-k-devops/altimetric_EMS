@model List<election_state>
@{
    ViewData["Title"] = "List of State";
}
<div class="report-container">
    <div class="report-header">
        <h1 class="recent-Articles">@ViewData["Title"]</h1>
        <a asp-controller="State" asp-action="Add"><input type="button" class="view" value="Create" /></a>
    </div>
    <div class="report-body">
        <div class="report-topic-heading">
            <h3 class="t-op">+</h3>
            <h3 class="t-op">State Name</h3>
            <h3 class="t-op">State IsActive</h3>
        </div>
        <div class="items">
            @foreach (var item in Model)
            {
                <div class="item1">
                    <h3 class="t-op-nextlvl"><a asp-controller="State" asp-action="Edit" asp-route-id="@item.election_state_id"><i class="fa-solid fa-pen-to-square"></i></a></h3>
                    <h3 class="t-op-nextlvl">@item.election_state_name</h3>
                    <h3 class="t-op-nextlvl label-tag">@(item.election_state_active ? "Active" : "In Active")</h3>
                </div>
            }
        </div>
    </div>
</div>
